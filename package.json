{
  "name": "vk-deck",
  "private": true,
  "version": "0.0.1",
  "engines": {
    "node": ">=v14.16"
  },
  "author": "Vitalya Volynskiy <i@vitalya.me>",
  "description": "Клиент для потребления контента ВКонтакте",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production yarn build",
    "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "pretest": "yarn build",
    "test": "node tests/app.spec.js",
    "watch": "node scripts/watch.js",
    "lint": "eslint . && stylelint **/*.css",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "yarn typecheck-main && yarn typecheck-preload && yarn typecheck-renderer"
  },
  "browserslist": [
    "Chrome 94"
  ],
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn typecheck"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.css": "stylelint --cache --fix"
  },
  "devDependencies": {
    "@rollup/plugin-yaml": "^3.1.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/tailwindcss": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "@vkontakte/api-schema-typescript": "^1.5131.2",
    "cross-env": "^7.0.3",
    "electron": "^15.0.0",
    "electron-builder": "^22.11.7",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "lint-staged": "^11.1.2",
    "playwright": "^1.15.0",
    "postcss": "^8.3.7",
    "postcss-nested": "^5.0.6",
    "semver": "^7.3.5",
    "simple-git-hooks": "^2.6.1",
    "stylelint": "^13.13.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.4.2",
    "vite": "^2.5.7"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "@vkontakte/icons": "^1.128.1",
    "@vkontakte/vk-bridge": "^2.4.8",
    "@vkontakte/vkjs": "^0.22.1",
    "@vkontakte/vkui": "^4.16.0",
    "axios": "^0.23.0",
    "axios-rate-limit": "^1.3.0",
    "electron-context-menu": "^3.1.1",
    "electron-updater": "^4.3.9",
    "electron-window-state": "^5.0.3",
    "i18next": "^21.0.1",
    "mobx": "^6.3.3",
    "mobx-react-lite": "^3.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.12.0"
  }
}
