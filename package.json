{
  "name": "vk-deck",
  "private": true,
  "version": "0.0.1",
  "engines": {
    "node": ">=v14.16"
  },
  "author": "Vitalya Volynskiy <i@vitalya.me>",
  "description": "Клиент для потребления контента ВКонтакте",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production yarn build",
    "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "pretest": "yarn build",
    "test": "node tests/app.spec.js",
    "watch": "node scripts/watch.js",
    "format": "prettier --write .",
    "lint": "eslint . && stylelint **/*.css",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "yarn typecheck-main && yarn typecheck-preload && yarn typecheck-renderer"
  },
  "browserslist": [
    "Chrome 94"
  ],
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn typecheck"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --cache --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-yaml": "^3.1.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/tailwindcss": "^2.2.4",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "@vkontakte/api-schema-typescript": "^1.5131.2",
    "cross-env": "^7.0.3",
    "electron": "^15.3.0",
    "electron-builder": "^22.14.5",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-css-import-order": "^1.0.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "lint-staged": "^12.1.2",
    "playwright": "^1.17.0",
    "postcss": "^8.4.4",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.5.0",
    "semver": "^7.3.5",
    "simple-git-hooks": "^2.7.0",
    "stylelint": "^14.1.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.5.2",
    "vite": "^2.6.14"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.3",
    "@vkontakte/icons": "^1.137.0",
    "@vkontakte/vk-bridge": "^2.4.8",
    "@vkontakte/vkjs": "^0.22.1",
    "@vkontakte/vkui": "^4.23.0",
    "axios": "^0.24.0",
    "axios-rate-limit": "^1.3.0",
    "date-fns": "^2.27.0",
    "electron-context-menu": "^3.1.1",
    "electron-updater": "^4.6.1",
    "electron-window-state": "^5.0.3",
    "i18next": "^21.5.4",
    "mobx": "^6.3.8",
    "mobx-react-lite": "^3.2.2",
    "react": "^17.0.2",
    "react-cool-virtual": "^0.5.5",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.14.3",
    "uuid": "^8.3.2"
  }
}
